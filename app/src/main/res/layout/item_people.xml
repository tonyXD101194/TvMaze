<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/default_size">

    <ImageView
        android:id="@+id/itemPeopleImageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:background="@color/backgroundItemSeason"
        android:src="@drawable/ic_person_24dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/itemPeopleTextViewName"
        style="@style/ItemTextView"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:lines="2"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/itemPeopleImageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>